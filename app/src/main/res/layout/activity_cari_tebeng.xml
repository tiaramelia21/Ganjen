<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_car_mobile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.ganjenapp.Fragment.CarMobileFragment">

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        app:srcCompat="@drawable/aboutcar"
        android:id="@+id/imageView5"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:text="Lokasi Awal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/teksAwalCari"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lokAwalCari"
        android:backgroundTint="#2ecc71"
        android:entries="@array/android_dropdown_arrays"/>

    <TextView
        android:text="Lokasi Tujuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/teksAkhirCari"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lokTujuanCari"
        android:backgroundTint="#2ecc71"
        android:entries="@array/android_dropdown_arrays"/>

    <TextView
        android:text="Jumlah Kursi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/textView5"
        android:textColor="@color/colorPrimary"/>

    <Spinner
        android:id="@+id/spinnerJmlKursi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2ecc71"
        android:entries="@array/android_dropdown_arrays"
        android:padding="5dp" />

    <TextView
        android:text="Waktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textColor="@color/colorPrimary"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/date"
        android:hint="Atur Tanggal" />

    <EditText
        android:hint="Atur Jam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/time" />

    <Button
        android:text="submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitCari"
        android:background="@color/colorPrimary"/>
</LinearLayout>
